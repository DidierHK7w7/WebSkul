@*
    @model List<SchoolBaseObject>
*@

<table class="striped">    <!--<table class="table table-dark table-hover">--> <!--Bootstrap-->
    <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Id</th>
            <th>Ations</th>
        </tr>
    </thead>
    <tbody>
    @{
        int i = 1;
        foreach (var obj in Model)
        {
            <tr>
                <th>@i</th>
                <td>@obj.Name</td>
                <td>@obj.Id</td>
                <th>
                <a asp-action="Index" asp-route-id="@obj.Id" class="ml-3 white-text"><i class="material-icons">visibility</i></a>
                <a asp-action="Update" asp-route-id="@obj.Id" class="ml-3 white-text"><i class="material-icons">mode_edit</i></a>
                <a asp-action="Delete" asp-route-id="@obj.Id" class="ml-3 white-text"><i class="material-icons table__item__link">delete</i></a>
                </th>
            </tr>
            i++;
        }
    }
    </tbody>
</table>