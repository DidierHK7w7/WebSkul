<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - WebSkul</title>
    <link rel="stylesheet" href="~/css/material.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebSkul.styles.css" asp-append-version="true" />
    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!--Import materialize.css-->
    <link type="text/css" rel="stylesheet" href="css/materialize.min.css"  media="screen,projection"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
</head>
<body>
    <header class="navbar-fixed">
        <nav class="black">
            <div class="nav-wrapper row">
                <a class="brand-logo light-blue-text accent-4 col l1 offset-l1" asp-area="" asp-controller="Home" asp-action="Index">WebSkul</a>
                <ul id="nav-mobile" class="right hide-on-med-and-down">
                    <li><a class="" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></li>
                    <li><a class="" asp-area="" asp-controller="School" asp-action="Index">School</a></li>
                    <li><a class="" asp-area="" asp-controller="Subject" asp-action="Index">Subject</a></li>
                </ul>
            </div>
        </nav>
    </header>
    <section class="white-text">
        <div class="container row">
        <main role="main" class="">
            @RenderBody()
        </main>
        </div>
    </section>
    <footer class="page-footer grey darken-3">
            <div class="container">
                <div class="row">
                    <div class="col l6 s12">
                        <h5 class="white-text">Footer Content</h5>
                        <p class="grey-text text-lighten-4">You can use rows and columns here to organize your footer content.</p>
                    </div>
                    <div class="col l4 offset-l2 s12">
                        <h5 class="white-text">Links</h5>
                        <ul>
                            <li><a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="footer-copyright">
                <div class="container">
                &copy; 2022 - WebSkul
                <a class="text-lighten-4 right" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                </div>
            </div>
        </footer>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <script type="text/javascript" src="js/materialize.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
